<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="@dimen/_10sdp"
    xmlns:android="http://schemas.android.com/apk/res/android">
<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/rlHeader"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_55sdp"
        android:background="@color/blue">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="@dimen/_25sdp"
            android:foreground="@drawable/ripple"
            android:layout_height="@dimen/_20sdp"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/ic_arrow_back_white_24dp"
            android:backgroundTint="@color/white" />


        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/iqos_white_logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivLogo"
            android:layout_centerHorizontal="true"
            android:text="D14"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp" />


    </RelativeLayout>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_below="@+id/rlHeader"
        android:textSize="@dimen/_14sdp"
        android:layout_marginStart="@dimen/_8sdp"
        android:text="Start: "
        android:id="@+id/tvM"
        android:textStyle="bold"
        android:textColor="@color/blue"
         android:layout_marginTop="@dimen/_20sdp"
        />
    <EditText
android:enabled="false"
        android:id="@+id/tvMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvM"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:padding="@dimen/_5sdp"
        android:gravity="start"
        android:layout_marginBottom="@dimen/_5sdp"
        android:background="@drawable/rounded_corner_device"
        android:textColor="@color/black"
         android:textSize="@dimen/_11sdp" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_below="@+id/tvMessage"
        android:textSize="@dimen/_14sdp"
        android:layout_marginStart="@dimen/_8sdp"
        android:text="If LANU indicates issues: "
        android:id="@+id/tvM2"
        android:textStyle="bold"
        android:textColor="@color/blue"
         android:layout_marginTop="@dimen/_20sdp"
        />
        <LinearLayout
            android:id="@+id/l1"
         android:layout_margin="@dimen/_5sdp"   android:layout_below="@+id/tvM2"
            android:layout_width="match_parent"
            android:background="@drawable/rounded_corner_device"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView

                 android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
android:text="Would you like me to address these issues in person or on call"
                android:padding="@dimen/_5sdp"
                android:gravity="start"
                 android:textColor="@color/black"
                android:textSize="@dimen/_11sdp" />
            <TextView

                 android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
android:text="If LANU requests to meet, set up time."
                android:padding="@dimen/_5sdp"

                android:gravity="start"
                android:textStyle="bold"
                 android:textColor="@color/black"
                android:textSize="@dimen/_11sdp" />
            <TextView
                android:layout_margin="@dimen/_5sdp"
android:id="@+id/tvBookAppointment"
                 android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
android:text="Book Appointment"
                android:padding="@dimen/_5sdp"
                android:background="@drawable/rectangle_background"

                android:gravity="start"
                  android:textColor="@color/white"
                android:textSize="@dimen/_11sdp" />
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="If LANU requests to address them on call, resolve them using GTPs."
                android:padding="@dimen/_5sdp"

                android:gravity="start"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="@dimen/_11sdp" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="(Only if LANU opted to provide feedback):"                android:padding="@dimen/_5sdp"

                android:gravity="start"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="@dimen/_11sdp" />

            <TextView
                android:layout_margin="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:id="@+id/tvQuestion1"
                android:text="Q1. May I ask, if you have used any other nicotine or tobacco products along with IQOS this past week?"

                android:textSize="@dimen/_11sdp"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <CheckBox
                    android:id="@+id/cbIQOS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:textAllCaps="true"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:buttonTint="@color/color_primary"
                    android:text="IQOS" />

                <CheckBox
                    android:id="@+id/cbCigrattes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:textAllCaps="true"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:buttonTint="@color/color_primary"
                    android:text="Cigarattes" />
                <CheckBox
                    android:id="@+id/cbNicotine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:textAllCaps="true"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:buttonTint="@color/color_primary"
                    android:text="Nicotine Pouch" />
                <CheckBox
                    android:id="@+id/cbPouch"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:textAllCaps="true"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:buttonTint="@color/color_primary"
                    android:text="Pouch" />
                <CheckBox
                    android:id="@+id/cbVpae"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:textAllCaps="true"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:buttonTint="@color/color_primary"
                    android:text="Vape" />
                <CheckBox
                    android:id="@+id/cbOther"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:textAllCaps="true"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:buttonTint="@color/color_primary"
                    android:text="Others" />

            </LinearLayout>

            <EditText
                android:id="@+id/etQ1a"
            android:visibility="gone"    android:layout_margin="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_gravity="start"
                android:gravity="start"
                android:background="@drawable/rounded_corner_meeting"
                android:imeOptions="actionNext"
                android:padding="@dimen/_5sdp"/>
            <TextView
                android:layout_margin="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:id="@+id/tvQuestion2"
                android:text="Q2. What % of the time did you use IQOS this week?"

                android:textSize="@dimen/_11sdp"
                android:textStyle="bold" />
            <RadioGroup
                android:id="@+id/rbIsNotify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/rb0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:buttonTint="@color/color_primary"
                    android:checked="true"
                    android:text="0%" />

                <RadioButton
                    android:id="@+id/rb1plus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:buttonTint="@color/color_primary"
                    android:text="0.1% - 69%" />
                <RadioButton
                    android:id="@+id/rv70plus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:buttonTint="@color/color_primary"
                    android:text="70% - 94%" />
                <RadioButton
                    android:id="@+id/rb95plus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:buttonTint="@color/color_primary"
                    android:text="95% - 100%" />
            </RadioGroup>

            <EditText
                android:visibility="gone"
                android:id="@+id/etQ2a"
                android:layout_margin="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_gravity="start"
                android:gravity="start"
                android:background="@drawable/rounded_corner_meeting"
                android:imeOptions="actionNext"
                android:padding="@dimen/_5sdp"/>
            <TextView
                android:layout_margin="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:id="@+id/tvQuestion3"
                android:text="Q3. If LANU is using other nicotine products  What is your reason for this? (address pin points if identified by LANU)"

                android:textSize="@dimen/_11sdp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etQ3a"
                android:layout_margin="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_gravity="start"
                android:gravity="start"
                android:background="@drawable/rounded_corner_meeting"
                android:imeOptions="actionNext"
                android:padding="@dimen/_5sdp"/>
            <Button
                android:layout_margin="@dimen/_5sdp"
                android:layout_gravity="center"
                android:layout_below="@+id/tvMessage"
                android:id="@+id/btnSubmit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle_background"
                android:gravity="center"
                android:text="Submit Feedback"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/_11sdp" />





        </LinearLayout>

<LinearLayout
android:gravity="center"

    android:layout_width="match_parent"
    android:layout_below="@+id/l1"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <Button
        android:layout_margin="@dimen/_5sdp"
        android:layout_below="@+id/tvMessage"
        android:id="@+id/btnCall"
        android:layout_width="@dimen/_80sdp"

        android:layout_height="@dimen/_35sdp"

        android:background="@drawable/rectangle_background"
        android:gravity="center"
        android:text="Call"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/_11sdp" />




</LinearLayout>
    </RelativeLayout>
</androidx.core.widget.NestedScrollView>

    </RelativeLayout>
