<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AppointmentsModule.ActivityBookAppointment">


    <RelativeLayout
        android:id="@+id/rlHeader"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_55sdp"
        android:background="@color/blue">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="@dimen/_25sdp"
            android:foreground="@drawable/ripple"
            android:layout_height="@dimen/_20sdp"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/ic_arrow_back_white_24dp"
            android:backgroundTint="@color/white" />


        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/iqos_white_logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivLogo"
            android:layout_centerHorizontal="true"
        android:text="My Appointment Detail"
            android:textColor="@color/white"
            android:textSize="@dimen/_13sdp" />


    </RelativeLayout>
    <LinearLayout
        android:id="@+id/llAppoint"
        android:layout_width="match_parent"
        android:layout_below="@+id/rlHeader"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/tvAppointment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:textSize="@dimen/_17sdp"
            android:textColor="@color/blue"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                 android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:textSize="@dimen/_13sdp"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>

                    <TextView

                        android:background="@drawable/rounded_corner_meeting"
                        android:id="@+id/tvName"
                        android:padding="@dimen/_5sdp"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                         android:textSize="@dimen/_10sdp"
                        android:textColor="@color/blue"
                        android:textStyle="bold"/>


                </LinearLayout>

                <LinearLayout
               android:layout_marginTop="@dimen/_10sdp"     android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Time"
                        android:textSize="@dimen/_13sdp"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>

                    <TextView
                        android:padding="@dimen/_5sdp"
                        android:layout_width="match_parent"
                    android:id="@+id/tvTime"
                        android:background="@drawable/rounded_corner_meeting"

                        android:text="HH:mm:ss"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                         android:textSize="@dimen/_10sdp"
                        android:textColor="@color/blue"
                        android:textStyle="bold"/>


                </LinearLayout>





            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/_10sdp"   android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                     android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Date"
                        android:textSize="@dimen/_13sdp"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>

                    <TextView
                        android:text="yyyy-mm-dd"
                        android:layout_width="match_parent"
                  android:id="@+id/tvDate"      android:layout_weight="1"
                        android:layout_height="wrap_content"
                         android:textSize="@dimen/_10sdp"
                        android:background="@drawable/rounded_corner_meeting"
android:padding="@dimen/_5sdp"
                        android:textColor="@color/blue"
                        android:textStyle="bold"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Location"
                        android:textSize="@dimen/_13sdp"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>

                    <EditText
                        android:layout_width="match_parent"
               android:id="@+id/tvLocation"
                        android:background="@drawable/rounded_corner_meeting"
android:padding="@dimen/_5sdp"
                        android:hint="Enter Location" android:layout_weight="1"
                        android:layout_height="wrap_content"
                         android:textSize="@dimen/_10sdp"
                        android:textColor="@color/blue"
                        android:textStyle="bold"/>


                </LinearLayout>





            </LinearLayout>



            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Appointment Status"
                    android:gravity="start"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13sdp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                      android:background="@drawable/rounded_corner_tv_background"
                    android:layout_height="wrap_content">


                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:id="@+id/spinnerAppointStatus"
                        android:background="@color/transparent"
                        />

                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:background="@drawable/ic_baseline_keyboard_arrow_down_24"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        />

                </RelativeLayout>

                <!--        <TextView-->
                <!--            android:id="@+id/tvStatus"-->
                <!--            android:layout_width="0dp"-->
                <!--            android:layout_height="wrap_content"-->
                <!--            android:layout_marginStart="@dimen/_10sdp"-->
                <!--            android:layout_weight="1"-->
                <!--            android:text="Cold"-->
                <!--            android:textColor="@color/blue"-->
                <!--            android:textSize="@dimen/_13sdp"-->
                <!--            android:textStyle="bold" />-->

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>
    <TextView
android:id="@+id/startAppoint"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:foreground="@drawable/ripple"
        android:layout_below="@+id/llAppoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:text="Update Appointment"
        android:background="@drawable/rectangle_background"
        android:backgroundTint="@color/blue"
android:padding="@dimen/_10sdp"
        android:layout_gravity="bottom|end"
        android:textSize="@dimen/_10sdp"
        android:textColor="@color/white"
        android:textStyle="bold"/>


    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_centerInParent="true"
        android:indeterminateTint="@color/color_primary"
        android:visibility="gone" />

</RelativeLayout>