<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/darkblue"
    android:layout_height="match_parent">


    <LinearLayout
        android:gravity="center_vertical"
        android:id="@+id/llProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_50sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_20sdp"
         android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_profile"
            />

        <LinearLayout
            android:layout_width="match_parent"
             android:layout_marginStart="@dimen/_10sdp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="@dimen/_15sdp"
                android:textColor="@color/white"
                 />

            <TextView
                android:id="@+id/tvCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(city)"
                android:layout_marginStart="@dimen/_10sdp"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/white"
                />



        </LinearLayout>




    </LinearLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_below="@+id/llProfile"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:background="@color/blue"/>

    <LinearLayout
        android:id="@+id/llDrawerHeadings"
        android:layout_width="match_parent"
        android:layout_below="@+id/line"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"
         android:orientation="vertical">


        <LinearLayout
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:id="@+id/llHome"
            android:layout_width="match_parent"
            android:foreground="@drawable/ripple"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_height="wrap_content"
             android:orientation="horizontal">

            <ImageView
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/homeicon"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Home"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_10sdp"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/white"
                />



        </LinearLayout>

        <LinearLayout
            android:id="@+id/llLeads"
            android:layout_width="match_parent"
            android:foreground="@drawable/ripple"       android:layout_marginStart="@dimen/_10sdp"
            android:layout_height="wrap_content"

            android:layout_marginTop="@dimen/_10sdp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView

                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"  android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/leads"
                />

            <TextView
                android:layout_width="match_parent"

                 android:gravity="center_vertical"
                android:layout_height="match_parent"
                android:text="My Leads"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_10sdp"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/white"
                />



        </LinearLayout>

        <LinearLayout
            android:id="@+id/llAppointment"
            android:layout_marginTop="@dimen/_10sdp"
            android:foreground="@drawable/ripple"
            android:layout_width="match_parent"
            android:layout_marginStart="@dimen/_10sdp"
android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView

                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                  android:background="@drawable/list"
                />

            <TextView

                 android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Appointments"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_10sdp"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/white"
                />



        </LinearLayout>

        <LinearLayout
            android:id="@+id/llMyPerformance"
            android:layout_marginTop="@dimen/_10sdp"

            android:foreground="@drawable/ripple"   android:layout_width="match_parent"

            android:layout_marginStart="@dimen/_10sdp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/_30sdp"

                android:gravity="center_vertical"


                android:layout_gravity="center_vertical"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/performance"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="My Performance"
                android:gravity="center_vertical"

                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_10sdp"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/white"
                />



        </LinearLayout>


        <LinearLayout
            android:id="@+id/llInventory"
            android:layout_width="match_parent"
            android:foreground="@drawable/ripple"    android:layout_marginStart="@dimen/_10sdp"
android:layout_marginTop="@dimen/_10sdp"
            android:layout_height="wrap_content"
             android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                 android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:background="@drawable/performance"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Inventory"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_10sdp"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/white"
                />



        </LinearLayout>



    </LinearLayout>



    <TextView
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_35sdp"
        android:visibility="gone"
        android:layout_marginTop="@dimen/_35sdp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/llDrawerHeadings"
        android:background="@drawable/login_btn_img"
        />



</RelativeLayout>