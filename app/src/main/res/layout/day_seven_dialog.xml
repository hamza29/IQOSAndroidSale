<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="@dimen/_10sdp">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:id="@+id/rlHeader"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_55sdp"
                android:background="@color/blue">

                <ImageView
                    android:id="@+id/ivBack"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/ic_arrow_back_white_24dp"
                    android:backgroundTint="@color/white"
                    android:foreground="@drawable/ripple" />


                <ImageView
                    android:id="@+id/ivLogo"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/iqos_white_logo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ivLogo"
                    android:layout_centerHorizontal="true"
                    android:text="D7"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14sdp" />


            </RelativeLayout>


            <TextView
                android:id="@+id/tvM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rlHeader"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:text="Start: "
                android:textColor="@color/blue"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/tvMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvM"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:background="@drawable/rounded_corner_device"
                android:enabled="false"
                android:gravity="start"
                android:padding="@dimen/_5sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_11sdp" />


            <TextView
                android:id="@+id/tvM2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvMessage"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:text="If LANU indicates issues: "
                android:textColor="@color/blue"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/l1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvM2"
                android:layout_margin="@dimen/_5sdp"
                android:background="@drawable/rounded_corner_device"
                android:orientation="vertical">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:gravity="start"
                    android:padding="@dimen/_5sdp"
                    android:text="Would you like me to address these issues in person or on call"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11sdp" />

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:gravity="start"
                    android:padding="@dimen/_5sdp"

                    android:text="If LANU requests to meet, set up time."
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11sdp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvBookAppointment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="@dimen/_5sdp"
                    android:background="@drawable/rectangle_background"
                    android:gravity="start"
                    android:padding="@dimen/_5sdp"

                    android:text="Book Appointment"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_11sdp" />

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:gravity="start"
                    android:padding="@dimen/_5sdp"

                    android:text="If LANU requests to address them on call, resolve them using GTPs."
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11sdp"
                    android:textStyle="bold" />

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:gravity="start"
                    android:padding="@dimen/_5sdp"

                    android:text="(Only if LANU opted to provide feedback):"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11sdp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvQuestion1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:text="Q1. May I ask, if you have used any other nicotine or tobacco products along with IQOS this past week?"
                    android:textColor="@color/black"

                    android:textSize="@dimen/_11sdp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <CheckBox
                        android:id="@+id/cbIQOS"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:buttonTint="@color/color_primary"
                        android:text="IQOS"
                        android:textAllCaps="true" />

                    <CheckBox
                        android:id="@+id/cbCigrattes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:buttonTint="@color/color_primary"
                        android:text="Cigarattes"
                        android:textAllCaps="true" />

                    <CheckBox
                        android:id="@+id/cbNicotine"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:buttonTint="@color/color_primary"
                        android:text="Nicotine Pouch"
                        android:textAllCaps="true" />

                    <CheckBox
                        android:id="@+id/cbPouch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:buttonTint="@color/color_primary"
                        android:text="Pouch"
                        android:textAllCaps="true"
                        android:visibility="gone" />

                    <CheckBox
                        android:id="@+id/cbVpae"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:buttonTint="@color/color_primary"
                        android:text="Vape"
                        android:textAllCaps="true" />

                    <CheckBox
                        android:id="@+id/cbOther"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:buttonTint="@color/color_primary"
                        android:text="Others"
                        android:textAllCaps="true" />

                </LinearLayout>

                <EditText
                    android:id="@+id/etQ1a"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_gravity="start"
                    android:layout_margin="@dimen/_5sdp"
                    android:background="@drawable/rounded_corner_meeting"
                    android:gravity="start"
                    android:imeOptions="actionNext"
                    android:padding="@dimen/_5sdp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tvQuestion2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:text="Q2. What % of the time did you use IQOS this week?"
                    android:textColor="@color/black"

                    android:textSize="@dimen/_11sdp"
                    android:textStyle="bold" />

                <RadioGroup
                    android:id="@+id/rbIsNotify"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/rb0"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:buttonTint="@color/color_primary"
                        android:checked="true"
                        android:text="0%" />

                    <RadioButton
                        android:id="@+id/rb1plus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:buttonTint="@color/color_primary"
                        android:text="0.1% - 69%" />

                    <RadioButton
                        android:id="@+id/rv70plus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:buttonTint="@color/color_primary"
                        android:text="70% - 94%" />

                    <RadioButton
                        android:id="@+id/rb95plus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:buttonTint="@color/color_primary"
                        android:text="95% - 100%" />
                </RadioGroup>

                <EditText
                    android:id="@+id/etQ2a"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_gravity="start"
                    android:layout_margin="@dimen/_5sdp"
                    android:background="@drawable/rounded_corner_meeting"
                    android:gravity="start"
                    android:imeOptions="actionNext"
                    android:padding="@dimen/_5sdp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tvQuestion3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:text="Q3. If LANU is using other nicotine products ïƒ  What is your reason for this? (address pin points if identified by LANU)"
                    android:textColor="@color/black"

                    android:textSize="@dimen/_11sdp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etQ3a"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_gravity="start"
                    android:layout_margin="@dimen/_5sdp"
                    android:background="@drawable/rounded_corner_meeting"
                    android:gravity="start"
                    android:imeOptions="actionNext"
                    android:padding="@dimen/_5sdp" />

                <Button
                    android:id="@+id/btnSubmit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvMessage"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_5sdp"
                    android:background="@drawable/rectangle_background"
                    android:gravity="center"
                    android:text="Submit Feedback"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_11sdp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_below="@+id/l1"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnCall"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_below="@+id/tvMessage"

                    android:layout_margin="@dimen/_5sdp"

                    android:background="@drawable/rectangle_background"
                    android:gravity="center"
                    android:text="Call"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_11sdp" />

                <Button
                    android:id="@+id/btnMessage"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_margin="@dimen/_5sdp"

                    android:layout_toEndOf="@+id/btnCall"
                    android:background="@drawable/rectangle_background"
                    android:gravity="center"
                    android:text="Message"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_11sdp" />


            </LinearLayout>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>

</RelativeLayout>
