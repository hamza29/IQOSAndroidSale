<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginModule.ActivityLogin">


    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_120sdp"
        android:background="@drawable/iqos_logo"/>


    <ImageView
        android:id="@+id/ivIqoachApp"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_below="@+id/ivLogo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_30sdp"
        android:background="@drawable/iqoachapp"/>


    <ImageView
        android:id="@+id/ivBackground"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_400sdp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_30sdp"
        android:background="@drawable/backgroundimage"/>

    
    <EditText
        android:id="@+id/etUsername"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:hint="username"
         android:textAlignment="center"
        android:textColorHint="@color/fields_hint_color"
        android:layout_centerVertical="true"
        android:background="@drawable/button_background"
        android:layout_marginEnd="@dimen/_50sdp"
        android:layout_marginStart="@dimen/_50sdp"
        />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:hint="password"
        android:layout_below="@+id/etUsername"
        android:layout_marginTop="@dimen/_20sdp"
        android:textAlignment="center"
        android:textColorHint="@color/fields_hint_color"
         android:background="@drawable/button_background"
        android:layout_marginEnd="@dimen/_50sdp"
        android:layout_marginStart="@dimen/_50sdp"
        />


    <ImageView
        android:id="@+id/ivLogin"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_35sdp"
         android:layout_centerHorizontal="true"
        android:layout_below="@id/etPassword"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@drawable/login_btn_img"/>


    <ImageView
        android:id="@+id/ivPmlLogo"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_55sdp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/pml_logo_img"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/_10sdp"
        />




</RelativeLayout>