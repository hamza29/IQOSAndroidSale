<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
     android:layout_height="match_parent"
    tools:context=".HomeFragmentModule.HomeFragment">

    <RelativeLayout
        android:id="@+id/rlLeads"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_130sdp"
        android:layout_weight="1"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/inventory_home_pic"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="My Leads"
            android:textSize="@dimen/_17sdp"
            android:layout_marginBottom="@dimen/_30sdp"
            android:layout_marginStart="@dimen/_30sdp"
            android:textColor="@color/white"/>



    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rlAppoints"
        android:layout_below="@+id/rlLeads"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_130sdp"
        android:layout_weight="1"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/inventory_home_pic"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="Appointments"
            android:textSize="@dimen/_17sdp"
            android:layout_marginBottom="@dimen/_30sdp"
            android:layout_marginStart="@dimen/_30sdp"
            android:textColor="@color/white"/>



    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlPerf"
        android:layout_below="@+id/rlAppoints"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_130sdp"
        android:layout_weight="1"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/inventory_home_pic"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="My Performance"
            android:textSize="@dimen/_17sdp"
            android:layout_marginBottom="@dimen/_30sdp"
            android:layout_marginStart="@dimen/_30sdp"
            android:textColor="@color/white"/>



    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlInvent"
        android:layout_below="@+id/rlPerf"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_130sdp"
        android:layout_weight="1"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/inventory_home_pic"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="Inventory"
            android:textSize="@dimen/_17sdp"
            android:layout_marginBottom="@dimen/_30sdp"
            android:layout_marginStart="@dimen/_30sdp"
            android:textColor="@color/white"/>



    </RelativeLayout>





</RelativeLayout>